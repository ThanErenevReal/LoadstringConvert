local a=false;pcall(function()workspace.Outside.Cave.Lava:Destroy()end)game:GetService("UserInputService").InputBegan:Connect(function(b,c)if not c and b.KeyCode==Enum.KeyCode.F then a=true end end)while not a and task.wait()do pcall(function()local d={}for e,f in ipairs(workspace.Outside.Cave.Ores:GetChildren())do if f:IsA("Model")then table.insert(d,f)end end;if#d>0 then local g=d[math.random(1,#d)]while g and g.Parent==workspace.Outside.Cave.Ores and not a do local h=game.Players.LocalPlayer;local i=h.Character or h.CharacterAdded:Wait()if not i:IsDescendantOf(workspace)then i=h.CharacterAdded:Wait()end;local j=i:FindFirstChild("HumanoidRootPart")while not j do i=h.Character or h.CharacterAdded:Wait()j=i:FindFirstChild("HumanoidRootPart")task.wait()end;local k=g.PrimaryPart and g.PrimaryPart.CFrame or g:FindFirstChild("PrimaryPart")and g:GetPrimaryPartCFrame()or g:FindFirstChildWhichIsA("BasePart")and g:FindFirstChildWhichIsA("BasePart").CFrame;if k and j then pcall(function()j.CFrame=k end)pcall(function()game.ReplicatedStorage.RemoteEvents.Tools.Drill:FireServer(g)game.ReplicatedStorage.RemoteEvents.Tools.Mine:FireServer(g)end)end;task.wait()end end end)end
